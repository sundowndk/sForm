<sui elementheight="50px">
	<layoutbox type="horizontal" stylesheet="LayoutboxNoborder" width="600px" height="100px">		
		<panel size="%elementheight%">
			<layoutbox type="vertical">
				<panel size="100px">
					<label text="Title"/>
				</panel>					
				<panel size="*">
					<textbox tag="title" width="100%" focus="true" />
				</panel>					
			</layoutbox>
		</panel>
		<panel size="*">
		</panel>
		<panel size="45px">
			<layoutbox type="vertical">
				<panel size="*">
				</panel>
				<panel size="210px">
					<button tag="create" label="Create" width="100px" disabled="true"/>
					<button tag="close" label="Close" width="100px" />
				</panel>						
			</layoutbox>
		</panel>
	</layoutbox>
</sui>

